{
  "private": true,
  "version": "1.0.0",
  "name": "@fasow/root",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "cd packages/client && yarn start",
    "build": "npx lerna run build",
    "build-backend": "cd packages/fasow && npx -p typescript tsc index.ts --declaration --experimentalDecorators --emitDecoratorMetadata --outDir build",
    "debug-backend": "tsc --target ES5 --experimentalDecorators --emitDecoratorMetadata packages/fasow/src/main.ts && node packages/fasow/src/main.js"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "lerna": "^5.5.2",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "is-even": "^1.0.0",
    "json2csv": "^5.0.7",
    "reflect-metadata": "^0.1.13"
  }
}
