{
  "compilerOptions": {
    // Always include these settings
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // These settings are totally up to you
    "esModuleInterop": true,
    "target": "es5",
    "module": "esnext",
    "strict": true,

    // decorator support
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
